{
  "name": "Wave",
  "version": "1.0.0",
  "description": "Voice to text",
  "main": "src/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite --port 3000",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "start": "electron-forge start",
    "build": "vite build",
    "clean": "rimraf out dist build",
    "package": "npm run clean && npm run build && electron-forge package",
    "make": "npm run clean && npm run build && electron-forge make",
    "make:mac-x64": "npm run clean && npm run build && dotenv electron-forge make -- --arch=x64 --platform=darwin --targets=@electron-forge/maker-dmg",
    "make:mac-arm64": "npm run clean && npm run build && dotenv electron-forge make -- --platform=darwin --arch=arm64 --targets=@electron-forge/maker-dmg"
  },
  "keywords": [
    "electron",
    "react",
    "tailwind"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-dmg": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^8.0.0",
    "electron": "^28.2.0",
    "postcss": "^8.4.33",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.1",
    "terser": "^5.43.1",
    "vite": "^5.1.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@electron/notarize": "^3.0.1",
    "@redux-devtools/extension": "^3.3.0",
    "dotenv": "^17.2.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.1.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "node-llama-cpp": "^3.12.4",
    "node-mac-permissions": "^2.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.2",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.21.3",
    "redux": "^5.0.1",
    "redux-saga": "^1.2.3",
    "reselect": "^5.1.0",
    "whisper-node": "^1.1.1"
  },
  "config": {
    "forge": "./forge.config.js"
  },
  "build": {
    "appId": "com.wave.siddg.app",
    "productName": "Wave",
    "directories": {
      "output": "dist",
      "buildResources": "buildResources"
    },
    "files": [
      "build/**/*",
      "src/electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "buildResources/icon.png"
    }
  }
}
